<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
    <section class="user_info">
    <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
    </h1>
    </section>
    
    <head>
        <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
        </style>
    </head>
    
    <body>

        <h2>Stocks</h2>
        
        <table class="center">
          <tr>
            <th>Funds</th>
            <th>IBM</th>
            <th>Amazon</th>
            <th>Apple</th>
          </tr>
          <tr>
            <td> <%= @user.funds %> </td>
            <td> <%= @user.ibm %> </td>
            <td> <%= @user.amazon %> </td>
            <td> <%= @user.apple %> </td>
          </tr>
          
        </table>

    </body>
    
    
    </aside>
</div>
<% provide(:title, 'Market') %>
<h1>Stocks</h1>

   <div>
    <%= line_chart [
 {name: "IBM", data: @stocks.all.inject({}) {|res, v| res[v[:date]] = v.close; res }},
             ], points: false, colors: ["#b00", "#666"], width: "1100px", height: "500px" %>
            
        <% if logged_in? %>   
        <div style="width: 100%; display: table;">
        <div style="display: table-row; height: 100px;">
            <div style="width: 50%; display: table-cell">
                <%= form_tag buy_ibm_path do |form| %>
                      <%= label_tag :email %><br>
                      <%= text_field_tag  :email, nil, :required => true %>
                      <%= label_tag  :amount %><br>
                      <%= text_field_tag :amount, nil, :required => true %>
                      <%= submit_tag "Buy" %>
                <% end %> 
            </div>
            
            
            <div style="display: table-cell"> 
                <%= form_tag sell_ibm_path do |form| %>
                      <%= label_tag :email %><br>
                      <%= text_field_tag  :email, nil, :required => true %>
                      <%= label_tag  :amount %><br>
                      <%= text_field_tag :amount, nil, :required => true %>
                      <%= submit_tag "Sell" %>
                <% end %> 
            </div>
        </div>
        </div>
        <% end %>
    </div>
    
    
